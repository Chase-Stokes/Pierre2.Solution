@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h1>Flavors:</h1>
<hr>
<div class="formBox">
  @if (@Model.Count == 0)
  {
    <h3>No flavors have been added yet!</h3>
    <button class="btn-dark">@Html.ActionLink("Go Add One", "Create", "Flavors") </button>
  } 

  <ul>
    @foreach(Flavor f in Model)
    {
      <li>@Html.ActionLink($"{f.Description}", "Details", new { id = f.FlavorId })</li>
    }
  </ul> 
</div>